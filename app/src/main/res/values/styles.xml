<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/default_background</item>
    </style>

    <style name="H1Headline">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="H2Headline">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="H3Headline">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Subtitle1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Subtitle2">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Body1">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Body2">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Button">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
